<%= form_for(@band) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <% Artist.all.each do |artist| %>
    <%=
        check_box_tag(
        "bandartist[artist_ids][]",
        artist.id,
        !BandArtist.where(:artist_id => artist.id, :band_id => @band.id).empty?,
        :id => "artist_id_#{artist.id}"
      )
      %>
  <%= label_tag "artist_id_#{artist.id}", artist.name%>
  <% end %><br>

  <%= f.submit "Create Band"%>
<% end %>